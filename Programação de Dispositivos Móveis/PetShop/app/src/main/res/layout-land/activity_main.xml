<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/grpTipo"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/lbl_cao"
            android:id="@+id/rbCao"/>
        <RadioButton
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/lbl_gato"
            android:id="@+id/rbGato"/>
        <RadioButton
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/lbl_passaro"
            android:id="@+id/rbPassaro"/>
        <RadioButton
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/lbl_reptil"
            android:id="@+id/rbReptil"/>
    </RadioGroup>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/lbl_nome_animal"
        android:id="@+id/edNome"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/lbl_raca_animal"
        android:id="@+id/edRaca"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/lbl_idade_animal"
        android:id="@+id/edIdade"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/lbl_nome_tutor"
        android:id="@+id/edNomeTutor"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/lbl_fone_tutor"
        android:id="@+id/edFone"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_confirmar"
        android:layout_gravity="right"
        android:onClick="confirmar"/>
    </LinearLayout>
    <ListView
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/listaAnimais"/>
</LinearLayout>