<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:background="@drawable/borda_item_lista"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_descricao_categoria"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/categoria"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_quantidade_contas"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="@string/quantidade_contas"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_valor_contas"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="@string/valor_total"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>